<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    android:orientation="vertical"
    android:id="@+id/second_fragment_contener"
    tools:context=".SecondFragment.SecondFragment">
    <TextView
        android:id="@+id/second_fragment_chat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat name"
        android:background="@color/dark_blue"
        android:textColor="@color/white"
        android:padding="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/second_fragment_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:padding="8dp"
        android:text="hey"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/input_message_edit_text"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/input_message_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/dark_blue"
        android:textColorHint="#667981"
        android:hint="Write a message..."
        android:padding="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>